<%= form_with(model: [post, Comment.new], url: post_comments_path(post), local: true) do |f| %>
  <div class="mb-2">
    <%= f.text_area :body, rows: 3, placeholder: "Write a comment...", class: "w-full border rounded p-2" %>
  </div>

  <% if user_signed_in? %>
    <%= f.submit "Add Comment", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-500" %>
  <% else %>
    <%= link_to "Sign in to comment", new_user_session_path, class: "bg-gray-800 text-white px-4 py-2 rounded" %>
  <% end %>
<% end %>
