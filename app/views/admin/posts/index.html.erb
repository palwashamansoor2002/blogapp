<div class="max-w-5xl mx-auto py-10 px-6">

  <h1 class="text-3xl font-bold text-gray-900 mb-6 text-center">Manage Posts</h1>

  <div class="overflow-x-auto">
    <table class="min-w-full bg-white border border-gray-300 rounded-lg shadow-md">
      <thead class="bg-gray-100">
        <tr>
          <th class="px-4 py-2 border text-left text-gray-700">ID</th>
          <th class="px-4 py-2 border text-left text-gray-700">Title</th>
          <th class="px-4 py-2 border text-left text-gray-700">User</th>
          <th class="px-4 py-2 border text-left text-gray-700">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr class="hover:bg-gray-50">
            <td class="border px-4 py-2"><%= post.id %></td>
            <td class="border px-4 py-2"><%= post.title %></td>
            <td class="border px-4 py-2"><%= post.user.name %></td>
            <td class="border px-4 py-2 space-x-2">
              <%= link_to "Show", post_path(post), class: "px-3 py-1 bg-blue-500 text-white rounded hover:bg-blue-600" %>
              <%= link_to "Edit", edit_post_path(post), class: "px-3 py-1 bg-yellow-500 text-white rounded hover:bg-yellow-600" %>
              <%= link_to "Delete", post_path(post), method: :delete, data: { confirm: "Are you sure?" }, class: "px-3 py-1 bg-red-600 text-white rounded hover:bg-red-700" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>
