<div class="max-w-4xl mx-auto py-10 px-6">

  <!-- Dashboard Header -->
  <h1 class="text-3xl font-bold text-gray-900 mb-6 text-center">Admin Dashboard</h1>

  <!-- Summary Stats -->
  <div class="bg-white shadow-md rounded-xl p-6 mb-8">
    <p class="text-gray-700 text-lg">Total Posts: <span class="font-semibold"><%= @posts_count %></span></p>
  </div>

  <!-- Recent Posts -->
  <div class="bg-white shadow-md rounded-xl p-6">
    <h2 class="text-2xl font-semibold text-gray-800 mb-4">Recent Posts</h2>
    <ul class="space-y-2 list-disc list-inside">
      <% @recent_posts.each do |post| %>
        <li class="text-gray-700">
          <%= link_to post.title, post_path(post), class: "text-indigo-600 hover:underline font-medium" %> by <span class="text-gray-600"><%= post.user.name %></span>
        </li>
      <% end %>
    </ul>
  </div>

</div>
